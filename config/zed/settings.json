// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
  "show_inline_completions": true,
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "deepseek-coder-v2:16b"
    },
    "version": "2"
  },
  "base_keymap": "VSCode",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "ui_font_weight": 100,
  "buffer_font_weight": 100,
  "buffer_font_family": "Hack Nerd Font",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Custom VSCode Dark Modern"
  },
  "show_wrap_guides": true,
  "wrap_guides": [80, 120],
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "inlay_hints": {
    "enabled": true
  },
  "inline_completions": {
    "disabled_globs": [".env", ".pyc", ".venv"]
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    },
    "cspell": {
      "settings": {
        "dictionaries": ["custom"],
        "dictionaryDefinitions": [
          { "name": "custom", "path": "./.cspell_dict.txt" }
        ]
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    }
  },
  "hour_format": "hour24",
  "format_on_save": "on",
  "use_autoclose": true,
  "tab_size": 4,
  "languages": {
    "json": {
      "tab_size": 2
    },
    "yaml": {
      "tab_size": 2
    },
    "TypeScript": {
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true
      }
    },
    "Python": {
      "format_on_save": { "language_server": { "name": "ruff" } },
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": true
  },
  "file_types": {
    "PHP": ["*.php", "*.module", "*.theme"]
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "language_models": {
    "enabled": true,
    "version": "2",
    "default_model": {
      "provider": "ollama",
      "model": "llama3.2:3b"
    },
    "ollama": {
      "api_url": "http://localhost:11434",
      "low_speed_timeout_in_seconds": 600,
      "available_models": [
        {
          "provider": "ollama",
          "name": "deepseek-coder-v2:latest",
          "max_tokens": 16384
        },
        {
          "provider": "ollama",
          "name": "llama3.1:8b",
          "max_tokens": 16384
        },
        {
          "provider": "ollama",
          "name": "codestral:22b",
          "max_tokens": 16384
        },
        {
          "provider": "ollama",
          "name": "llama3.2:3b",
          "max_tokens": 131072
        },
        {
          "provider": "ollama",
          "name": "qwen2.5:32b",
          "max_tokens": 16384
        },
        {
          "provider": "ollama",
          "name": "qwen2.5:7b",
          "max_tokens": 16384
        }
      ]
    }
  }
}
