// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
    "minimap": {
        "show": "auto",
    },
    "buffer_font_fallbacks": ["Hack Nerd Font Mono", ".SystemUIFont"],
    "diagnostics": {
        "button": true,
        "include_warnings": true,
        "inline": {
            "enabled": true,
            "update_debounce_ms": 150,
            "padding": 4,
            "min_column": 0,
            "max_severity": null,
        },
    },
    "icon_theme": "Material Icon Theme",
    "show_edit_predictions": true,
    "agent": {
        "tool_permissions": {
            "tools": {
                "terminal": {
                    "always_allow": [
                        {
                            "pattern": "^cargo\\s",
                        },
                        {
                            "pattern": "^grep\\s",
                        },
                        {
                            "pattern": "^ls\\s",
                        },
                        {
                            "pattern": "^cat\\s",
                        },
                    ],
                },
            },
        },
        "default_profile": "write",
        "default_model": {
            "provider": "ollama",
            "model": "gpt-oss:latest",
        },
        "enabled": true,
        "button": true,
        "model_parameters": [],
    },
    "base_keymap": "VSCode",
    "autosave": {
        "after_delay": {
            "milliseconds": 1000,
        },
    },
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings",
        // above is default from Zed
        "**/out",
        "**/dist",
        "**/.husky",
        "**/.turbo",
        "**/.vscode-test",
        "**/.vscode",
        "**/.next",
        "**/.storybook",
        "**/.tap",
        "**/.nyc_output",
        "**/report",
        "**/node_modules",
    ],
    "vim_mode": true,
    "vim": {
        "use_smartcase_find": true,
    },
    "ui_font_size": 18,
    "buffer_font_size": 18,
    "ui_font_weight": 100,
    "buffer_font_weight": 100,
    "buffer_font_family": "Hack Nerd Font",
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Custom VSCode Dark Modern",
    },
    "show_wrap_guides": true,
    "wrap_guides": [90, 120],
    "git": {
        "inline_blame": {
            "enabled": true,
        },
    },
    "inlay_hints": {
        "enabled": true,
    },
    "edit_predictions": {
        "disabled_globs": [".env", ".pyc", ".venv"],
    },
    "tabs": {
        "close_position": "right",
        "file_icons": true,
        "git_status": true,
    },
    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "check": {
                    "command": "clippy",
                },
            },
        },
        "cspell": {
            "settings": {
                "dictionaries": ["custom"],
                "dictionaryDefinitions": [
                    { "name": "custom", "path": "./.cspell_dict.txt" },
                ],
            },
        },
        "tailwindcss-language-server": {
            "settings": {
                "classAttributes": ["class", "className", "ngClass", "styles"],
            },
        },
    },
    "format_on_save": "off",
    "use_autoclose": true,
    "tab_size": 4,
    "languages": {
        "TypeScript": {
            "inlay_hints": {
                "enabled": true,
                "show_parameter_hints": false,
                "show_other_hints": true,
                "show_type_hints": true,
            },
        },
        "Python": {
            "inlay_hints": {
                "enabled": true,
                "show_parameter_hints": false,
                "show_other_hints": true,
                "show_type_hints": true,
            },
            "formatter": { "language_server": { "name": "ruff" } },
            "language_servers": ["!pyright", "ty", "ruff"],
        },
    },
    "telemetry": {
        "diagnostics": true,
        "metrics": true,
    },
    "tab_bar": {
        "show": true,
    },
    "scrollbar": {
        "show": "auto",
    },
    "file_types": {
        "PHP": ["*.php", "*.module", "*.theme"],
        "Dockerfile": ["Dockerfile", "Dockerfile.*"],
        "JSON": ["json", "jsonc", "*.code-snippets"],
        "tailwindcss": ["*.css"],
        "html": ["*.twig"],
    },
    "centered_layout": {
        "left_padding": 0.15,
        "right_padding": 0.15,
    },
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware",
    },
    "language_models": {
        "ollama": {
            "api_url": "http://localhost:11434",
            "available_models": [
                {
                    "name": "gpt-oss:latest",
                    "display_name": "GPT OSS 20B",
                    "max_tokens": 32000,
                    "supports_thinking": true,
                    "supports_tools": true,
                    "supports_images": false,
                    "keep_alive": 300,
                },
            ],
        },
    },
}
