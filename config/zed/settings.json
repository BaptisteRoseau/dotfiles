// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
    "show_inline_completions": true,
    "assistant": {
        "default_model": {
            "provider": "ollama",
            "model": "deepseek-coder-v2:latest"
        },
        "version": "2"
    },
    "autosave": {
        "after_delay": {
            "milliseconds": 1000
        }
    },
    "vim_mode": true,
    "ui_font_size": 16,
    "buffer_font_size": 14,
    "ui_font_weight": 100,
    "buffer_font_weight": 100,
    "buffer_font_family": "Hack Nerd Font",
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Custom VSCode Dark Modern"
    },
    "show_wrap_guides": true,
    "wrap_guides": [80, 120],
    "git": {
        "inline_blame": {
            "enabled": true
        }
    },
    "inlay_hints": {
        "enabled": true
    },
    "inline_completions": {
        "disabled_globs": [".env", ".pyc", ".venv"]
    },
    "tabs": {
        "close_position": "right",
        "file_icons": true,
        "git_status": true
    },
    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "check": {
                    "command": "clippy"
                }
            }
        }
    },
    "hour_format": "hour24",
    "format_on_save": "on",
    "use_autoclose": true,
    "tab_size": 4,
    "languages": {
        "json": {
            "tab_size": 2
        },
        "yaml": {
            "tab_size": 2
        }
    },
    "file_types": {
        "PHP": ["*.php", "*.module"]
    },
    "language_models": {
        "enabled": true,
        "version": "2",
        "default_model": {
            "provider": "ollama",
            "model": "deepseek-coder-v2:latest"
        },
        "ollama": {
            "api_url": "http://localhost:11434",
            "low_speed_timeout_in_seconds": 120,
            "available_models": [
                {
                    "provider": "ollama",
                    "name": "deepseek-coder-v2:latest",
                    "max_tokens": 16384
                },
                {
                    "provider": "ollama",
                    "name": "llama3.1:8b",
                    "max_tokens": 16384
                },
                {
                    "provider": "ollama",
                    "name": "codestral:22b",
                    "max_tokens": 16384
                }
            ]
        }
    }
}
